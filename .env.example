# PayrollPro Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=payroll_pro
DB_USER=root
DB_PASS=

# Application Settings
APP_NAME=PayrollPro
APP_URL=http://localhost/payroll-management-system
APP_ENV=development
APP_DEBUG=true

# Security
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# Paths
PAYSLIP_STORAGE_PATH=storage/payslips
LOG_PATH=storage/logs
